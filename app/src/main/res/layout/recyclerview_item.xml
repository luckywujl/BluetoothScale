<?xml version="1.0" encoding="utf-8"?>
<view.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="1dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">
                <!--第一行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp">

                    <TextView
                        android:id="@+id/item_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="编号"
                        android:textColor="#000000"
                         />

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="名称"
                        android:textColor="#000000"
                         />

                    <TextView
                        android:id="@+id/item_unit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="单位"
                        android:textColor="#000000"
                         />

                    <TextView
                        android:id="@+id/item_spection"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="规格"
                        android:textColor="#000000"

                        android:paddingRight="5dp"/>

                    <TextView
                        android:id="@+id/item_scale_model"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:text="方式"
                        android:textColor="#000000"
                         />
                </LinearLayout>
                <!--第二行-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="2dp">

                    <TextView
                        android:id="@+id/item_modify_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="修改时间" />

                    <TextView
                        android:id="@+id/item_remark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="备注" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <!--编辑按钮-->
        <TextView
            android:id="@+id/tv_modify"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#b9b9b9"
            android:gravity="center"
            android:text="修改"
            android:textColor="#DDFFFFFF"
            android:layout_alignParentTop="true"
            />
        <!--删除按钮-->
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#ff0000"
            android:gravity="center"
            android:text="删除"
            android:textColor="#DDFFFFFF"
            android:layout_alignParentTop="true"
            />

    </LinearLayout>
</view.SlidingButtonView>
